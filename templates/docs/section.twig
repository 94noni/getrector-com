{% extends "base.twig" %}

{% set page_title %}{{ section_title }} | Documentation{% endset %}

{% block main %}
    <div class="row">
        <div class="col-12 col-sm-3">
            <div id="documentation_menu" class="p-4">
                {# @see https://github.com/rectorphp/rector/tree/main/docs #}
                <ul class="mt-3">
                    <li>
                        <a href="{{ path('documentation') }}">Introduction</a>
                    </li>
                </ul>

                {% for category, documentation_sections in documentations_sections_by_category %}
                    <hr class="border-line">

                    <h4 class="mt-4 mb-3">{{ category }}</h4>

                    <ul>
                        {% for documentation_section in documentation_sections %}
                            <li>
                                {# @var documentation_section \Rector\Website\ValueObject\DocumentationSection #}
                                <a href="{{ path('documentation', { section: documentation_section.slug }) }}">
                                    {{ documentation_section.name }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endfor %}

                <ul>
                    <li>
                        <a href="https://leanpub.com/rector-the-power-of-automated-refactoring">
                            Learn Rector in Depth from Book
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="col-12 col-sm-9" id="documentation">
            <h1>{{ section_title }}</h1>

            {{ section_html_contents|raw }}
        </div>
    </div>
{% endblock %}
