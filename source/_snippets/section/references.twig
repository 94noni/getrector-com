<section class="section bg-light" id="client">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center">
                    <h2>You Don't Have to Take my Word for it</h2>
                </div>
            </div>
        </div>

        <div class="row mt-5 vertical-content">
            <div class="col-12">
                {% for reference in references %}
                    <div class="mx-auto text-center">
                        <div class="mt-3">
                            <div class="mt-2 reference-text">
                                {{ reference.text|markdown|raw }}
                            </div>
                            <div class="mt-4">
                                <img src="/assets/images/references/{{ reference.photo }}" alt="" class="img-fluid mx-auto rounded-circle img-thumbnail">
                            </div>

                            <div class="clients_detail mt-4">
                                <p class="mb-0 font-weight-bold">{{ reference.position }}</p>
                                <strong>
                                    <a href="{{ reference.link }}">{{ reference.name }}</a>
                                </strong>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
