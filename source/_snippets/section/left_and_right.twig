<section class="section" id="services">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="text-center">
                    <h2>{{ copy.left_right.title }}</h2>
                </div>
            </div>
        </div>
        <div class="row mt-5 services_boxes vertical-content rounded p-4">
            <div class="col-lg-5">
                <div class="services_icon text-center">
                    <i class="pe-7s-piggy"></i>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="services_content text-center">
                    <h4>
                        {{ copy.instant_upgrades.title }}
                    </h4>
                    <p class="mt-3 text-muted mx-auto">
                        {% for item in copy.instant_upgrades.bullets %}
                            {{ item }}<br>
                        {% endfor %}

                    </p>
                </div>
            </div>
        </div>

        <div class="row mt-3 services_boxes vertical-content rounded p-4">
            <div class="col-lg-7">
                <div class="services_content text-center">
                    <h4>
                        {{ copy.instant_refactoring.title }}
                    </h4>
                    <p class="mt-3 text-muted mx-auto">
                        {% for item in copy.instant_refactoring.bullets %}
                            {{ item }}<br>
                        {% endfor %}
                    </p>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="services_icon text-center">
                    <i class="pe-7s-diskette"></i>
                </div>
            </div>
        </div>

        <div class="text-center">
            <a href="https://github.com/rectorphp/rector" class="btn btn-custom mt-5">
                Install Rector
            </a>
        </div>
    </div>
</section>
